<form>
    {{!-- Type --}}
    {{formGroup schema.fields.type
        value=type
        name="type"
        localize=true
    }}

    {{!-- Items rule --}}
    {{#if (eq type "items")}}
        <div class="form-group">
            {{app-document-drop-list
                name="items"
                value=items
                type="Item"
            }}
        </div>
    {{/if}}

    {{!-- Resources rule --}}
    {{#if (eq type "resource")}}
        <div class="form-group">
            <label>{{localize "COSMERE.Item.Sheet.Talent.GrantRules.Resource"}}</label>
            <div class="form-fields">
                <select name="resource">
                    {{selectOptions resourceSelectOptions selected=resource localize=true}}
                </select>
            </div>
        </div>
        <div class="form-group">
            <label>{{localize "COSMERE.Item.Sheet.Talent.GrantRules.ResourceValue"}}</label>
            <div class="form-fields">
                <input 
                    type="text" 
                    name="value" 
                    value="{{value}}"
                    placeholder="{{localize "COSMERE.Item.Sheet.Talent.GrantRules.ResourceValuePlaceholder"}}"
                >
            </div>
        </div>
    {{/if}}

    {{!-- Submit --}}
    <br>
    <div class="form-group">
        <button data-action="update" type="submit">
            {{localize "GENERIC.Button.Update"}}
        </button>
    </div>
</form>